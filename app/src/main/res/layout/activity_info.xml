<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/negrosuave">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/logoprincipal"
            android:scaleType="centerInside"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="favorites"
            android:textSize="20dp"
            android:textColor="@color/rojo"/>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Informacion:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <VideoView
        android:id="@+id/video"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/CVimagenPeli"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:visibility="visible">
        <ImageView
            android:id="@+id/imagenPeli"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/fotoperfil6"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ToggleButton
            android:id="@+id/botonsinopsis"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textOn="Sinopsis"
            android:textOff="Sinopsis"
            />
        <ToggleButton
            android:id="@+id/botonPlay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textOn="Quit"
            android:textOff="Play"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sinopsisInfo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sinopsisInfoTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sinopsis aqui"
                android:textColor="@color/white"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/botonvolver"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Volver"
        android:background="@drawable/botonredondeado"/>




</LinearLayout>