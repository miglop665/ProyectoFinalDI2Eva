<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:orientation="vertical"
    android:background="@color/negrosuave">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/logoprincipal"
            android:scaleType="centerInside"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="favorites"
            android:textSize="20dp"
            android:textColor="@color/rojo"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imagenperfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/fotoperfil6"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txvusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Username:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/txvcorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Correo:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ContraseÃ±a: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txvcontra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="---------"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="15dp"/>

        <ImageButton
            android:id="@+id/botonver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logoojo"
            android:background="@drawable/botonredondeado"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/botonvolver"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Volver"
        android:background="@drawable/botonredondeado"/>



</LinearLayout>